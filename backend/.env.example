# Server Configuration
NODE_ENV=development # Application environment: development, production, test
PORT=4000 # Server port number
CLIENT_URL=http://localhost:3000 # Frontend application URL

# Neon Database URL
DATABASE_URL="postgresql://neondb_owner:xxxxx@xxxxxx/neondb?sslmode=require&channel_binding=require" # Complete PostgreSQL connection string for Neon database

# JWT Configuration
JWT_SECRET=xxxxxxxxxxx # Secret key for signing JWT access tokens
JWT_EXPIRES_IN=7d # Access token expiration time
JWT_REFRESH_SECRET=xxxxxxxxxxxxxx # Secret key for signing JWT refresh tokens
JWT_REFRESH_EXPIRES_IN=30d # Refresh token expiration time

# OPENAI API
OPENAI_API_KEY=sk-proj-xxxxxxxxx # OpenAI API key for GPT models and embeddings

# Google Gemini API
GEMINI_API_KEY=AIzaxxxxxxxxxx # Google Gemini API key for AI language models

# Email Configuration
SMTP_HOST=smtp.gmail.com # SMTP server hostname
SMTP_PORT=587 # SMTP server port (587 for TLS, 465 for SSL)
SMTP_USER=example@gmail.com # Email address for sending notifications
SMTP_PASSWORD=fhgnxxxxxxxxx # Email password or app-specific password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # Time window in milliseconds for rate limiting (15 minutes)
RATE_LIMIT_MAX_REQUESTS=100 # Maximum number of requests per window

# Security
BCRYPT_ROUNDS=10 # Number of rounds for bcrypt password hashing (higher = more secure but slower)